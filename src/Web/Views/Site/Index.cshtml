@model IEnumerable<Post>

@{ ViewBag.Title = "Index"; }

<ul>
@foreach (Post post in Model) {
	<li class=post>
		<header>
			<h1><a href='@Url.Action("Post", new { slug = post.Slug })'>@post.Title</a></h1>
		</header>
		@Html.Raw(post.Body)
		<footer>
			<p>Posted on @post.Posted | 0 comments</p>
		</footer>
	</li>
}
</ul>